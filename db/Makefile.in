PACKAGE=@PACKAGE@
VERSION=@VERSION@
srcdir = @srcdir@
top_builddir = ..
distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)
subdir = db

all clean install:
	cd dist ; if [ -f Makefile ] ; then $(MAKE) $@ ; fi

distclean:
	cd dist ; if [ -f Makefile ] ; then $(MAKE) $@ ; fi
	rm -f Makefile

dvi dist installcheck check:

distdir: clean
	if [ ! -d $(distdir) ] ; then mkdir -p $(distdir) ; fi
	( cd $(srcdir) ; find * \( ! -name '*~' -a ! -name '.#*' -a ! -name '#*#' -a ! -name core \) -print | cpio -o ) | ( cd $(distdir) ; cpio -imd )
