. ./test_functions

export MIFLUZ_CONFIG ; MIFLUZ_CONFIG=${srcdir}/mifluz-search.conf

count1=`head -1 $srcdir/search.txt | ../htdb/mifluzload -z $VERBOSE test`
count2=`tail -1 $srcdir/search.txt | ../htdb/mifluzload -z $VERBOSE test`

../htdb/htdb_stat -zW -d test -s index | grep '1	Number of unique keys in the tree' > /dev/null || { 
	fail "Wrong number of keys"
	../htdb/htdb_stat -zW -d test -s index
}
