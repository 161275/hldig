. test_functions

verbose=$1

exercise() {
   if [ "$LONG_TEST" = "y" ]
   then
	    ( cd ../htcommon
	      perl word_builder.pl $1
	      if $MAKE > /tmp/t_word$$ 2>&1
	      then
		rm /tmp/t_word$$
	      else
		cat /tmp/t_word$$
		exit 1
	      fi
	    )
	    if $MAKE > /tmp/t_word$$ 2>&1
	    then
		rm /tmp/t_word$$
	    else
		cat /tmp/t_word$$
		exit 1
	    fi
    fi
    ./word -w $1 -k $verbose || exit 1
}

if [ "$LONG_TEST" = "y" ]
then
	desc="../test/word.try1 ../test/word.try2 ../test/word.try3 ../test/word.try4 ../test/word.try5 word.desc"
else
	desc="word.desc"
fi

for i in $desc
do
    exercise $i
done
