top_srcdir=		@top_srcdir@
srcdir=			@srcdir@
VPATH=			@srcdir@

top_builddir= ..
include $(top_builddir)/Makefile.config

OBJS = Document.o HTML.o Images.o \
		Parsable.o Plaintext.o Postscript.o \
		Retriever.o SGMLEntities.o Server.o \
		URLRef.o main.o ExternalParser.o PDF.o

TARGET=		htdig

all:	$(TARGET)

$(TARGET):	$(OBJS) $(HTLIBS)
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	rm -f $(TARGET) $(OBJS) *~ *.bak *% a.out *.orig core

mostlyclean: clean

distclean:	clean
	rm -f Makefile *.proj

depend:
	$(MAKEDEPEND) @CPPFLAGS@ $(CXXFLAGS) $(INCS) -- $(OBJS)

main.o:	$(top_builddir)/CONFIG

