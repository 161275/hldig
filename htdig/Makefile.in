include @top_srcdir@/Makefile.config

OBJS = Document.o HTML.o Images.o \
		Parsable.o Plaintext.o Postscript.o \
		Retriever.o SGMLEntities.o Server.o \
		URLRef.o main.o ExternalParser.o PDF.o

TARGET=		htdig

all:	$(TARGET)

$(TARGET):		$(OBJS)
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	$(RM) $(TARGET) $(OBJS) *~ *.bak *% a.out *.orig core

distclean:	clean
	$(RM) Makefile *.proj

depend:
	$(MAKEDEPEND) @CPPFLAGS@ $(CXXFLAGS) -- $(OBJS)

main.o:	@top_srcdir@/CONFIG
