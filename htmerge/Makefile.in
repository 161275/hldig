include @top_srcdir@/Makefile.config

OBJS=		docs.o htmerge.o words.o 

TARGET=		htmerge
LOCAL_DEFINES=	-DSORT_PROG=\"@SORT@\"

all:		$(TARGET)

$(TARGET):	$(OBJS)
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	$(RM) $(OBJS) $(TARGET) *~ *% *.bak core a.out *.orig

distclean:	clean
	$(RM) Makefile *.proj

depend:
	$(MAKEDEPEND) $(CXXFLAGS) -- $(OBJS)

htmerge.o:		@top_srcdir@/CONFIG
