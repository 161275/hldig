include @top_srcdir@/Makefile.config

OBJS=		docs.o htmerge.o words.o 

TARGET=		htmerge
LOCAL_DEFINES=	-DSORT_PROG=\"@SORT@\"

all:		$(TARGET)

$(TARGET):	$(OBJS) @top_srcdir@/htcommon/libcommon.a @top_srcdir@/htlib/libht.a
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	rm -f $(OBJS) $(TARGET) *~ *% *.bak core a.out *.orig

distclean:	clean
	rm -f Makefile *.proj

depend:
	$(MAKEDEPEND) $(CXXFLAGS) $(INCS) -- $(OBJS)

htmerge.o:		@top_srcdir@/CONFIG
