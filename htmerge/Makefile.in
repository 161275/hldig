top_srcdir=		@top_srcdir@
srcdir=			@srcdir@
VPATH=			@srcdir@

top_builddir= ..
include $(top_builddir)/Makefile.config

OBJS=		docs.o htmerge.o words.o 

TARGET=		htmerge
LOCAL_DEFINES=	-DSORT_PROG=\"@SORT@\"

all:		$(TARGET)

$(TARGET):	$(OBJS) $(HTLIBS)
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	rm -f $(OBJS) $(TARGET) *~ *% *.bak core a.out *.orig

mostlyclean:	clean

distclean:	clean
	rm -f Makefile *.proj

depend:
	$(MAKEDEPEND) $(CXXFLAGS) $(INCS) -- $(OBJS)

htmerge.o:		$(top_builddir)/CONFIG
