#
# To compile with profiling do the following:
#
# make clean
# ( cd db ; make all )
# make CXXFLAGS=-g PROFILING=-p all
#
# Note that it's necessary to rebuild Berkeley DB without CXXFLAGS set because
# it has undesirable effects. CXXFLAGS must be set to -g because it defaults
# to -g -O2 when g++ is used and profiling is not done in a intuitive way.
#

AUTOMAKE_OPTIONS = foreign

INCLUDES=	-DDEFAULT_CONFIG_FILE=\"$(DEFAULT_CONFIG_FILE)\" \
		-I$(top_srcdir)/include -I$(top_srcdir)/htlib \
		-I$(top_srcdir)/htnet -I$(top_srcdir)/htcommon \
		-I$(top_srcdir)/htword \
		-I$(top_srcdir)/db/dist -I$(top_builddir)/db/dist \
		-I$(top_srcdir)/db/include -I$(top_builddir)/db/include \
		$(LOCAL_DEFINES) $(PROFILING)

HTLIBS=		$(top_builddir)/htnet/libhtnet.la \
		$(top_builddir)/htcommon/libcommon.la \
		$(top_builddir)/htword/libhtword.la \
		$(top_builddir)/htlib/libht.la \
		$(top_builddir)/htcommon/libcommon.la \
		$(top_builddir)/htword/libhtword.la \
		$(top_builddir)/db/dist/libhtdb.a
