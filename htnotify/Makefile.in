include @top_srcdir@/Makefile.config

OBJS=		htnotify.o 

LOCAL_DEFINES=  -DSENDMAIL=\"$(SENDMAIL)\"

TARGET=		htnotify

all:	$(TARGET)

$(TARGET):		$(OBJS)
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	$(RM) $(TARGET) $(OBJS) *~ *.bak *% a.out *.orig core

distclean:	clean
	$(RM) Makefile *.proj

depend:
	$(MAKEDEPEND) @CPPFLAGS@ $(CXXFLAGS) -- $(OBJS)

htnotify.o:		@top_srcdir@/CONFIG
