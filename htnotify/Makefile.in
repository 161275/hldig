include @top_srcdir@/Makefile.config

OBJS=		htnotify.o 

LOCAL_DEFINES=  -DSENDMAIL=\"$(SENDMAIL)\"

TARGET=		htnotify

all:	$(TARGET)

$(TARGET):	$(OBJS) $(HTLIBS)
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	rm -f $(TARGET) $(OBJS) *~ *.bak *% a.out *.orig core

mostlyclean:	clean

distclean:	clean
	rm -f Makefile *.proj

depend:
	$(MAKEDEPEND) @CPPFLAGS@ $(CXXFLAGS) $(INCS) -- $(OBJS)

htnotify.o:		@top_srcdir@/CONFIG
