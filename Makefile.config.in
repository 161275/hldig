include @HTDIG_TOP@/CONFIG

#
# You should not have to modify anything below this point.
#

SHELL=                  /bin/sh
top_srcdir=             @top_srcdir@
srcdir=                 @srcdir@
VPATH=                  @srcdir@

#
# Locations of programs
#
CXX=		@CXX@
CC=		@CC@
RANLIB=		@RANLIB@
MAKEDEPEND=	@top_srcdir@/makedp
RM=		rm -f
FIND=		@FIND@
AR=		@AR@
SED=		@SED@
INSTALL=	@INSTALL@
TAR=		@TAR@
PDF_PARSER=	@PDF_PARSER@
SENDMAIL=	@SENDMAIL@

DEFINES=	-DDEFAULT_CONFIG_FILE=\"$(DEFAULT_CONFIG_FILE)\"
CCC=		$(CXX)
LIBDIRS=	-L../htlib -L../htcommon -L../@DB_DIR@ -L../@RX_DIR@/rx -L/usr/lib
INCS=		-I../htlib -I../htcommon -I../@DB_DIR@ -I../@RX_DIR@/rx -I../include
LIBS=		-lcommon -lht -ldb -lrx @LIBS@

DIST=		@PACKAGE@-@VERSION@
DISTDIR=	$(top_srcdir)/../$(DIST)

#CPPFLAGS=	$(CC_OPTIONS) -static @CXXFLAGS@ @DEFS@ $(INCS)
#CXXFLAGS=	@CXXFLAGS@ -static $(LOCAL_DEFINES) $(DEFINES) $(INCS)
CPPFLAGS=	$(CC_OPTIONS) @CXXFLAGS@ @DEFS@ $(INCS)
CXXFLAGS=	@CXXFLAGS@ $(LOCAL_DEFINES) $(DEFINES) $(INCS)
LDFLAGS=	$(LIBDIRS)

.SUFFIXES: .cc
.cc.o:
	$(CXX) -c $(CXXFLAGS) $<

.c.o:
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $<

