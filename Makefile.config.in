include @HTDIG_TOP@/CONFIG

#
# You should not have to modify anything below this point.
#

SHELL=                  /bin/sh
top_srcdir=             @top_srcdir@
srcdir=                 @srcdir@
VPATH=                  @srcdir@

#
# Locations of programs
#
CXX=		@CXX@
CC=		@CC@
RANLIB=		@RANLIB@
MAKEDEPEND=	@HTDIG_TOP@/makedp
FIND=		@FIND@
AR=		@AR@
INSTALL=	@INSTALL@
INSTALL_PROGRAM= $(INSTALL)
INSTALL_DATA=   $(INSTALL)
PDF_PARSER=	@PDF_PARSER@
SENDMAIL=	@SENDMAIL@

DEFINES=	-DDEFAULT_CONFIG_FILE=\"$(DEFAULT_CONFIG_FILE)\"
LIBDIRS=	-L../htlib -L../htcommon -L../db/dist -L../rx/rx -L/usr/lib
INCS=		-I../htlib -I../htcommon -I../db/dist -I../rx/rx -I../include
HTLIBS=		../htcommon/libcommon.a \
		../htlib/libht.a \
		../db/dist/libdb.a \
		../rx/rx/librx.a
LIBS=		$(HTLIBS) @LIBS@

DIST=		@PACKAGE@-@VERSION@
DISTDIR=	$(top_srcdir)/../$(DIST)

CFLAGS=		@CFLAGS@
CPPFLAGS=	@CPPFLAGS@
CXXFLAGS=	@CXXFLAGS@
ALL_CFLAGS=	$(LOCAL_DEFINES) $(DEFINES) $(INCS) $(CFLAGS)
ALL_CXXFLAGS=	$(LOCAL_DEFINES) $(DEFINES) $(INCS) $(CXXFLAGS)
LDFLAGS=	@LDFLAGS@ $(LIBDIRS)

.SUFFIXES: .cc
.cc.o:
	$(CXX) -c $(ALL_CXXFLAGS) $<

.c.o:
	$(CC) -c $(CPPFLAGS) $(ALL_CFLAGS) $<

