include @HTDIG_TOP@/CONFIG

#
# You should not have to modify anything below this point.
#
DEFINES=	-DDEFAULT_CONFIG_FILE=\"$(DEFAULT_CONFIG_FILE)\"
SHELL=		/bin/sh
CXX=		@CXX@
CC=		@CC@
RANLIB=		@RANLIB@
MAKEDEPEND=	@HTDIG_TOP@/makedp
RM=		rm -f
FIND=		@FIND@
AR=		@AR@
SED=		@SED@
INSTALL=	@HTDIG_TOP@/install-sh -c
TAR=		@TAR@

CCC=		$(CXX)
LIBDIRS=	-L../htlib -L../htcommon -L../@GDBM_DIR@ -L../@DB_DIR@ -L../@RX_DIR@/rx -L/usr/lib
INCS=		-I../htlib -I../htcommon -I../include -I../@GDBM_DIR@ -I../@DB_DIR@ -I../@RX_DIR@/rx
LIBS=		-lcommon -lht -ldb -lrx -lgdbm @LIBS@

DIST=		htdig-@HTDIG_VERSION@
DISTDIR=	@HTDIG_TOP@/../$(DIST)

#CPPFLAGS=	$(CC_OPTIONS) -g -static @CXXFLAGS@ @DEFS@ $(INCS)
#CXXFLAGS=	@CXXFLAGS@ -g -static $(LOCAL_DEFINES) $(DEFINES) $(INCS)
CPPFLAGS=	$(CC_OPTIONS) -g -O2 @CXXFLAGS@ @DEFS@ $(INCS)
CXXFLAGS=	@CXXFLAGS@ -g -O2 $(LOCAL_DEFINES) $(DEFINES) $(INCS)
LDFLAGS=	-g $(LIBDIRS)

.SUFFIXES: .cc
.cc.o:
	$(CXX) -c $(CXXFLAGS) $<

.c.o:
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $<

