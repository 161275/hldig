include @top_srcdir@/Makefile.config

OBJS=		Endings.o EndingsDB.o Exact.o \
		Fuzzy.o Metaphone.o Soundex.o \
		SuffixEntry.o Synonym.o htfuzzy.o \
		Substring.o Prefix.o

LIBOBJS=	Endings.o Exact.o Fuzzy.o Metaphone.o \
		Soundex.o Synonym.o EndingsDB.o SuffixEntry.o Substring.o Prefix.o

TARGET=		htfuzzy
LIBTARGET=	libfuzzy.a

all:	$(TARGET) $(LIBTARGET)

$(TARGET):	$(OBJS) @top_srcdir@/htcommon/libcommon.a @top_srcdir@/htlib/libht.a
	$(CXX) -o $(TARGET) $(LDFLAGS) $(OBJS) $(LIBS)

$(LIBTARGET):		$(LIBOBJS)
	$(AR) rcv $(LIBTARGET) $?
	$(RANLIB) $(LIBTARGET)

install:	$(TARGET)
	$(INSTALL) $(TARGET) $(BIN_DIR)

clean:
	rm -f $(TARGET) $(LIBTARGET) $(OBJS) *~ *.bak *% a.out *.orig core

distclean:	clean
	rm -f Makefile *.proj

depend:
	$(MAKEDEPEND) @CPPFLAGS@ $(CXXFLAGS) -- $(OBJS)

htfuzzy.o:	@top_srcdir@/CONFIG
